<h1>Users</h1>

<%= link_to "New User", new_user_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Status</th>
      <th>Balance</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.status %></td>
        <td><%= user.balance %></td>
        <td>
          <%= link_to "View", user %>
          <%= link_to "Edit", edit_user_path(user) %>
          <%= link_to user.enabled? ? "Disable" : "Enable", toggle_status_user_path(user), method: :patch, data: { turbo_method: :patch } %>
          <%= button_to "Delete", user, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= form_with model: user, multipart: true do |f| %>

  <% if user.errors.any? %>
    <div style="color:red">
      <% user.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :role %>
    <%= f.select :role, User::ROLES %>
  </p>

  <p>
    <%= f.label :status %>
    <%= f.select :status, User::STATUSES %>
  </p>

  <p>
    <%= f.label :balance %>
    <%= f.number_field :balance, step: 0.01 %>
  </p>

  <p>
    <%= f.label :profile_image, "Profile Image" %>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </p>

  <p>
    <%= f.label :password, "New Password (leave blank to keep current)" %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation, "Confirm New Password" %>
    <%= f.password_field :password_confirmation %>
  </p>

  <%= f.submit %>

<% end %>
<!DOCTYPE html>
<html>
  <head>
    <title>Ebook Store</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application" %>
  </head>

  <body>

    <nav style="background:#333; padding:10px; margin-bottom:20px; display:flex; align-items:center; justify-content:space-between;">
      <div>
        <%= link_to "ðŸ“š Ebook Store", root_path, style: "color:white; font-weight:bold; margin-right:20px; text-decoration:none;" %>
        <%= link_to "Ebooks", ebooks_path, style: "color:white; margin-right:15px; text-decoration:none;" %>
        <%= link_to "Users", users_path, style: "color:white; text-decoration:none;" %>
      </div>

      <div style="display:flex; align-items:center; gap:15px;">
        <% if logged_in? %>
          <span style="color:white;">Hi, <%= current_user.name %>!</span>
          <%= button_to "Logout", logout_path, method: :delete, style: "color:white; text-decoration:none; background:none; border:none; cursor:pointer; font-size:1em;" %>
        <% else %>
          <%= link_to "Login", login_path, style: "color:white; text-decoration:none;" %>
          <%= link_to "Sign Up", signup_path, style: "color:white; text-decoration:none;" %>
        <% end %>
      </div>
    </nav>

    <div style="padding: 0 20px;">

      <% if notice %>
        <p style="color:green; font-weight:bold;"><%= notice %></p>
      <% end %>

      <% if alert %>
        <p style="color:red; font-weight:bold;"><%= alert %></p>
      <% end %>

      <%= yield %>

    </div>

  </body>
</html>